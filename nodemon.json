{
  "restartable": "rs",
  "ignore": [
    ".git",
    "logs/*",
    "docs/*",
    ".md",
    "/node_modules/*"
  ],
  "delay": "1000",
  "exec": "node ./src/index.js",
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "./src/*"
  ],
  "env": {
    "NODE_ENV": "dev"
  },
  "ext": "js ts json"
}